% dcfldd, common

# Copy a disk to a raw image file and hash the image using SHA256
dcfldd if=/dev/<disk_device> of=<file_img> hash=sha256 hashlog=<file_hash>

# Copy a disk to a raw image file, hashing each 1GB chunk
dcfldd if=/dev/<disk_device> of=<file_img> hash=<sha512_sha384_sha256_sha1_md5> hashlog=<file_hash> hashwindow=<1G>
