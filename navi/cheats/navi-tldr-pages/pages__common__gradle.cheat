% gradle, common

# Compile a package
gradle build

# Exclude test task
gradle build -x <test>

# Run in offline mode to prevent gradle from accessing the network during builds
gradle build --offline

# Clear the build directory
gradle clean

# Compile and Release package
gradle assembleRelease
