# Functions
function does_entity_exist() {
  if test "$1" "$3"; then
    echo "${2} ${3} exists"
  else
    echo "${2} ${3} does not exist"
  fi
}

function newRemoteBranch() {
  branchName="${1:=HEAD}"
  remote="${2:=origin}"

  git push -u "$remote" "$branchName"
}

function backupWallpapers() {
