  dconf dump /org/gnome/desktop/wm/keybindings/ >|"$SYS_BAK_DIR_UNDER_GIT/desktop-wm-keybindings.dconf"
}

function restoreGnomeKeybindings() {
  if [[ ! -f "$SYS_BAK_DIR_UNDER_GIT/desktop-wm-keybindings.dconf" ]] || [[ ! -f "$SYS_BAK_DIR_UNDER_GIT/custom-keybindings.dconf" ]]; then
    echo "$SYS_BAK_DIR_UNDER_GIT/desktop-wm-keybindings.dconf not found"
    return 1
  fi

  dconf load '/org/gnome/desktop/wm/keybindings/' <"$SYS_BAK_DIR_UNDER_GIT/desktop-wm-keybindings.dconf"
  dconf load '/org/gnome/settings-daemon/plugins/media-keys/custom-keybindings/' <"$SYS_BAK_DIR_UNDER_GIT/custom-keybindings.dconf"
}

function removeDuplicateProcesses() {
  procName="$1"
  if [[ -z "$procName" ]]; then
    echo "This function requires a process name to work. Please provide one"
    return 1
  fi

  pgrep "$procName" | awk 'NR >= 2' | xargs -I {} kill {}

  if [[ "$?" -ne 0 ]]; then
    echo "Something went wrong when trying to remove duplicates of the ${procName} process. Are you sure duplicates exist?"
    return 1
  fi

  echo "Duplicates of ${procName} removed."
}

